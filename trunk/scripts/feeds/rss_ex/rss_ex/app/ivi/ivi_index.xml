	<onClick>
	  <script>
	     focus = getFocusItemIndex();
       arr = null;
       arr = pushBackStringArray(arr, getItemInfo(focus, "feedPath"));
       arr = pushBackStringArray(arr, getItemInfo(focus, "feedTitle"));
       writeStringToFile(storagePath, arr);
	     focus = getFocusItemIndex();
	     if(getItemInfo(focus, "feedPath") == "/")
	       linkurl = "rss_file://../etc/translate/app/ivi/ivi_feed_main.xml";
	     else
	       linkurl = "rss_file://../etc/translate/app/ivi/ivi_feed.xml";
       doModalRss(linkurl);
	  </script>
	</onClick> 
