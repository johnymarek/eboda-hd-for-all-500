#! /bin/sh

SED="/bin/sed"
prefix="/opt"
exec_prefix="${prefix}"
version="5.2.12"
vernum="50212"
include_dir="${prefix}/include/php"
includes="-I$include_dir -I$include_dir/main -I$include_dir/TSRM -I$include_dir/Zend -I$include_dir/ext -I$include_dir/ext/date/lib"
ldflags=" -L/home/slug/optware/oleg/staging/opt/lib"
libs="-lcrypt   -lcrypt -lpcre -lm -lsasl2 -lxml2 -lz -lm -lxml2 -lz -lm -lcrypt -lxml2 -lz -lm -lcrypt "
extension_dir='/opt/lib/php/extensions'
program_prefix="mipsel-linux-"
program_suffix=""
exe_extension=""
php_cli_binary=NONE
php_cgi_binary=NONE
configure_options=" '--build=i386-pc-linux-gnu' '--host=mipsel-linux' '--target=mipsel-linux' '--prefix=/opt' '--with-config-file-scan-dir=/opt/etc/php.d' '--with-layout=GNU' '--disable-static' '--enable-bcmath=shared' '--enable-calendar=shared' '--enable-dba=shared' '--with-inifile' '--with-flatfile' '--enable-dom=shared' '--enable-embed=shared' '--enable-exif=shared' '--enable-ftp=shared' '--enable-mbstring=shared' '--enable-pdo=shared' '--enable-shmop=shared' '--enable-sockets=shared' '--enable-sysvmsg=shared' '--enable-sysvshm=shared' '--enable-sysvsem=shared' '--enable-xml=shared' '--enable-xmlreader=shared' '--with-bz2=shared,/home/slug/optware/oleg/staging/opt' '--with-curl=shared,/home/slug/optware/oleg/staging/opt' '--with-db4=/home/slug/optware/oleg/staging/opt' '--with-dom=shared,/home/slug/optware/oleg/staging/opt' '--with-gdbm=/home/slug/optware/oleg/staging/opt' '--with-gd=shared,/home/slug/optware/oleg/staging/opt' '--with-imap=shared,/home/slug/optware/oleg/staging/opt' '--with-mysql=shared,/home/slug/optware/oleg/staging/opt' '--with-mysql-sock=/tmp/mysql.sock' '--with-mysqli=shared,/home/slug/optware/oleg/staging/opt/bin/mysql_config' '--with-pgsql=shared,/home/slug/optware/oleg/staging/opt' '--with-mssql=shared,/home/slug/optware/oleg/staging/opt' '--with-unixODBC=shared,/home/slug/optware/oleg/staging/opt' '--with-openssl=shared,/home/slug/optware/oleg/staging/opt' '--with-sqlite=shared' '--with-pdo-mysql=shared,/home/slug/optware/oleg/staging/opt' '--with-pdo-pgsql=shared,/home/slug/optware/oleg/staging/opt' '--with-pdo-sqlite=shared' '--with-xsl=shared,/home/slug/optware/oleg/staging/opt' '--with-zlib=shared,/home/slug/optware/oleg/staging/opt' '--with-libxml-dir=/home/slug/optware/oleg/staging/opt' '--with-jpeg-dir=/home/slug/optware/oleg/staging/opt' '--with-png-dir=/home/slug/optware/oleg/staging/opt' '--with-freetype-dir=/home/slug/optware/oleg/staging/opt' '--with-zlib-dir=/home/slug/optware/oleg/staging/opt' '--with-pcre-regex=/home/slug/optware/oleg/staging/opt' '--enable-maintainer-zts' '--with-ldap=shared,/home/slug/optware/oleg/staging/opt' '--with-ldap-sasl=/home/slug/optware/oleg/staging/opt' '--without-iconv' '--without-pear' '--with-xmlrpc=shared'"
php_sapis="cli embed"

# Set php_cli_binary and php_cgi_binary if available
for sapi in $php_sapis; do
  case $sapi in
  cli)
    php_cli_binary="${exec_prefix}/bin/${program_prefix}php${program_suffix}${exe_extension}"
    ;;
  cgi)
    php_cgi_binary="${exec_prefix}/bin/${program_prefix}php-cgi${program_suffix}${exe_extension}"
    ;;
  esac
done

# Determine which (if any) php binary is available
if test "$php_cli_binary" != "NONE"; then
  php_binary="$php_cli_binary"
else
  php_binary="$php_cgi_binary"
fi

# Remove quotes
configure_options=`echo $configure_options | $SED -e "s#'##g"`

case "$1" in
--prefix)
  echo $prefix;;
--includes)
  echo $includes;;
--ldflags)
  echo $ldflags;;
--libs)
  echo $libs;;
--extension-dir)
  echo $extension_dir;;
--include-dir)
  echo $include_dir;;
--php-binary)
  echo $php_binary;;
--php-sapis)
  echo $php_sapis;;
--configure-options)
  echo $configure_options;;
--version)
  echo $version;;
--vernum)
  echo $vernum;;
*)
  cat << EOF
Usage: $0 [OPTION]
Options:
  --prefix            [$prefix]
  --includes          [$includes]
  --ldflags           [$ldflags]
  --libs              [$libs]
  --extension-dir     [$extension_dir]
  --include-dir       [$include_dir]
  --php-binary        [$php_binary]
  --php-sapis         [$php_sapis]
  --configure-options [$configure_options]
  --version           [$version]
  --vernum            [$vernum]
EOF
  exit 1;;
esac

exit 0
